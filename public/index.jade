doctype html
html
  head
    meta(charset='utf-8')
    title Hello Chat!
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    h1 Hello Chat!
    #content
      #room
      #room-list
      #messages
      
      form#send-form
        input#send-message
        input#send-button(type='submit', value='Отправить')
        
        #help
          ul
            li Изменить имя: 
              code /nick [имя]
            li Создать/присоединиться к комнате:
              code /room [имя комнаты]
    
    script(src='http://code.jquery.com/jquery-1.8.0.min.js', type='text/javascript')
    script(src='https://cdn.socket.io/socket.io-1.3.5.js', type='text/javascript')
    script(src='/javascripts/chat.js', type='text/javascript')
    script(src='/javascripts/chat_ui.js', type='text/javascript')  
